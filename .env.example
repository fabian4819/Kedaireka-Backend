# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/backend-pix2land
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/backend-pix2land-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this
JWT_REFRESH_EXPIRE=30d

# Cookie Configuration
COOKIE_EXPIRE=7

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Email Configuration (Optional - for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# FROM_EMAIL=noreply@example.com
# FROM_NAME=Backend Pix2Land

# File Upload (Optional - for future use)
# MAX_FILE_SIZE=5242880
# FILE_UPLOAD_PATH=./public/uploads
